{
  "entryFile": "src/index.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": [
    "src/**/*-controller.ts"
  ],
  "spec": {
    "basePath": "/api",
    "securityDefinitions": {
      "oidc": {
        "type": "http",
        "name": "connect.sid",
        "in": "cookie"
      }
    },
    "outputDirectory": "build",
    "host": "localhost:3000",
    "specVersion": 3,
    "schemes": [
      "http",
      "https"
    ],
    "specMerging": "recursive",
    "spec": {
      "components": {
        "schemas": {
          "User": {
            "dataType": "refObject",
            "properties": {
              "name": {
                "type": "string"
              },
              "roles": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          },
          "OIDCParameters": {
            "dataType": "refObject",
            "properties": {
              "state": {
                "type": "string"
              },
              "session_state": {
                "type": "string"
              },
              "code": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        }
      },
      "paths": {
        "/auth/mock": {
          "post": {
            "operationId": "AuthMock",
            "responses": {
              "200": {
                "description": "Success",
                "content": {
                  "application/json": {
                    "schema": {
                      "$ref": "#/components/schemas/User"
                    }
                  }
                }
              }
            },
            "security": [],
            "parameters": [],
            "tags": [
              "Authentication"
            ],
            "requestBody": {
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/User"
                  }
                }
              }
            }
          }
        },
        "/auth/oidc": {
          "post": {
            "operationId": "AuthOIDC",
            "responses": {
              "200": {
                "description": "Success",
                "content": {
                  "application/json": {
                    "schema": {
                      "$ref": "#/components/schemas/User"
                    }
                  }
                }
              }
            },
            "security": [],
            "parameters": [],
            "tags": [
              "Authentication"
            ],
            "requestBody": {
              "required": true,
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/OIDCParameters"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "routes": {
    "authenticationModule": "src/modules/auth/authentication.ts",
    "basePath": "/api",
    "routesDir": "build",
    "middleware": "express"
  }
}
